@import "../../style/icon.wxss";

page{
  background-image: linear-gradient(360deg,#f7e8b0,#79afff);
  height: 100%;
}
radio{
  transform: scale(0.6);
}
.radio-group{
  text-align: center;
  line-height: 70rpx;
}
.container{
  margin: 0;
  padding: 0;
  height: 100%;
  width: 100%;
}
/* 阴影效果 */
.shadow{
  margin-left:5%;
  background-color: #fff;
  box-shadow: 0px 0px 10px 0px #e4e4e4;	
  width: 90%;
  border-radius: 15rpx;
  font-size: 30rpx;
}
.top{
  width: 100%;
  height: 4%;
  /* background-image: linear-gradient(0deg,#f7e8b0,#79afff); */
  z-index: 9999;
}
.body{
  width: 100%;
  height: 96%;  
  z-index:1000;
}
/* 卡片样式 */
.card{
  width:92%;
  height:94%;
  box-shadow:0px 5px 0px #f7e8b0, 0px 5px 10px rgba(0, 0, 0, 0.5);
  margin:0 auto;
  /* background-color:#f5f8f7; */
  border-radius:20rpx;
  margin-top: 3%;
  background-color:#f7e8b0;
}
.card-head {
  text-align: center;
  font-size: 32rpx;
  color: #2e82ff;
  height: 80rpx;
  line-height: 80rpx;
  margin-bottom: 2%;
}

.list-radio{
  height: 140rpx;
}

.title{
  display: flex;
  border-bottom: 2rpx solid #ddd;
  border-left: solid 5rpx #79afff;
}
.title view{
  margin-left: 10rpx;
  margin-top: 10rpx;
  margin-bottom: 15rpx;
  font-size: 25rpx;
}
.content{
  margin-top: 40rpx;
}
/* 输入内容框 */
textarea{  
  word-wrap:break-word;
}
.textarea-content{
  padding: 20rpx;
  letter-spacing:10rpx;
  margin-left: 10rpx;
  color: #aab2bd;
}
/* 联系方式 */
.contact-info{
  height: 70rpx;
  align-items: center;
}
.footer{
  margin-top: 40rpx;
  text-align: center !important;
}